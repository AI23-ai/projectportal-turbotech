# Auth0 Configuration
# Create a new Auth0 Application at https://manage.auth0.com/
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_client_secret
AUTH0_API_AUDIENCE=https://your-api-audience
AUTH0_ISSUER_BASE_URL=https://your-tenant.us.auth0.com
AUTH0_BASE_URL=http://localhost:3000
AUTH0_SECRET=use_a_long_random_value_at_least_32_characters

# Database (local dev via docker-compose)
DATABASE_URL=postgresql+asyncpg://portal_user:portal_dev_password@localhost:5432/portal_dev

# Redis
REDIS_URL=redis://localhost:6379/0

# API
NEXT_PUBLIC_API_URL=http://localhost:8000

# Environment
ENVIRONMENT=development
